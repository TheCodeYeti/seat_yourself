<%= form_for(@restaurant) do |f| %>

  <% if @restaurant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>

      <ul>
      <% @restaurant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%=   f.label :capacity %>
    <%=  f.number_field :capacity %>
  </div>

  <div class="field">
    <%=   f.label :open_time %>
    <%= f.select(:open_time, Restaurant.times.map{|k,v| [v,k]}) %>
  </div>

  <div class="field">
    <%=   f.label :close_time %>
    <%= f.select(:close_time, Restaurant.times.map{|k,v| [v,k]}) %>
  </div>

  <div class="field">
    <%= f.label :address %><br/>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
